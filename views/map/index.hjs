<html>
<head>
  <title>Big Data!</title>
  <meta charset="UTF-8">
</head>

<style>
body{
  background-color:#ecf0f1;
}
</style>
<link rel=StyleSheet href="css/bootstrap.css" type="text/css" media=screen>
<body>
 <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">BigData</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li class="active"><a href="/map">Mapa</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container" style="padding-top:70px">

      <div class="col-md-6" id="mapdiv" style="width: 500px; height: 560px;"></div>
      <div class="col-md-6" id="data"></div>
    </div><!-- /.container -->

<script src="js/jquery.js" type="text/javascript"></script>
<script src="js/ammap/ammap.js" type="text/javascript"></script>
<script src="js/ammap/maps/js/portugalRegionsLow.js" type="text/javascript"></script>
<script>
    AmCharts.ready(function() {
        // create AmMap object
        var map = new AmCharts.AmMap();
        map.dragMap = false;
        map.zoomControl.panControlEnabled = false;
        map.zoomControl.zoomControlEnabled = false;
        map.zoomOnDoubleClick = false;
        map.handDrawn = false;

        // set path to images
        map.pathToImages = "ammap/images/";

        var dataProvider = {
            map: "portugalRegionsLow",
            getAreasFromMap:true
        };

        map.dataProvider = dataProvider;

        map.addListener("clickMapObject", function (event) {
         if (event.mapObject.id != undefined) {

            dados = {"morada":event.mapObject.enTitle.replace("ã", "a").replace("ç", "c").toUpperCase()};

              $.ajax({
                  url : "/api/patientInfo",
                  type: "POST",
                  data : dados,
                  success: function(data, textStatus, jqXHR)
                  {
                    console.log(data.length);
                     $("#data").html("<h4> Número de Pacientes: "+data.length+"</h4>");
                  }
              });
           }
        });


        map.areasSettings = {
            autoZoom: false,
            selectedColor: "#1abc9c",
            selectable: true,
            fixedSize: true,
            color:"#2ecc71"
        };

        // write the map to container div
        map.write("mapdiv");
    });
</script>
</body>
</html>
